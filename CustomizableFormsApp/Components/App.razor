@using CustomizableFormsApp.Components.Layout
@using Microsoft.AspNetCore.Components.Web

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <title>CustomizableFormsApp</title>

    <!-- Bootstrap CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons from CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Custom CSS (should be in wwwroot/css/app.css) -->
    <link href="css/app.css" rel="stylesheet" />

    @* Favicon line removed as file does not exist *@
    @* <link rel="icon" type="image/png" href="favicon.png" /> *@

    <!-- HeadOutlet is where Blazor components can add content to the <head> dynamically -->
    <HeadOutlet />
</head>

<body>
    <!-- This is where your Blazor Router and components will be rendered -->
    <Routes />

    <!-- Blazor script - MUST be loaded AFTER the Blazor app is initialized -->
    <script src="_framework/blazor.web.js"></script>

    <!-- Bootstrap JS Bundle with Popper from CDN - MUST be loaded AFTER Blazor script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>